<UserControl x:Class="ECATPlugin.PopupWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <DataGrid x:Name="ValueDataGrid" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Concrete Density" Binding="{Binding ConcreteType}" Width="*" CanUserSort="False"/>
                <DataGridTextColumn Header="0%" Binding="{Binding ZeroPercent}" Width="*" CanUserSort="False">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="275.0">
                                    <Setter Property="Background" Value="#ff6600"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="295.0">
                                    <Setter Property="Background" Value="#ff6600"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="310.0">
                                    <Setter Property="Background" Value="#ff6600"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="330.0">
                                    <Setter Property="Background" Value="#ff6600"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="345.0">
                                    <Setter Property="Background" Value="#e60000"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="360.0">
                                    <Setter Property="Background" Value="#e60000"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="390.0">
                                    <Setter Property="Background" Value="#a40000"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="415.0">
                                    <Setter Property="Background" Value="#a40000"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="470.0">
                                    <Setter Property="Background" Value="#a40000"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ZeroPercent}" Value="520.0">
                                    <Setter Property="Background" Value="#a40000"/>
                                </DataTrigger>

                                <!-- Add more DataTriggers as needed for different values -->
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="25%" Binding="{Binding TwentyFivePercent}" Width="*" CanUserSort="False">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="205.0">
                                    <Setter Property="Background" Value="#e1f86e"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="225.0">
                                    <Setter Property="Background" Value="#f8d492"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="240.0">
                                    <Setter Property="Background" Value="#f8d492"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="260.0">
                                    <Setter Property="Background" Value="#ff6600"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="275.0">
                                    <Setter Property="Background" Value="#ff6600"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="290.0">
                                    <Setter Property="Background" Value="#ff6600"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="310.0">
                                    <Setter Property="Background" Value="#ff6600"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="335.0">
                                    <Setter Property="Background" Value="#e60000"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="380.0">
                                    <Setter Property="Background" Value="#e60000"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TwentyFivePercent}" Value="425.0">
                                    <Setter Property="Background" Value="#e60000"/>
                                </DataTrigger>
                                <!-- Add more DataTriggers as needed for different values -->
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <!-- Repeat for other columns as needed -->
                <DataGridTextColumn Header="50%" Binding="{Binding FiftyPercent}" Width="*" CanUserSort="False">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FiftyPercent}" Value="155.0">
                                    <Setter Property="Background" Value="#00cc00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FiftyPercent}" Value="165.0">
                                    <Setter Property="Background" Value="#00cc00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FiftyPercent}" Value="175.0">
                                    <Setter Property="Background" Value="#e1f86e"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FiftyPercent}" Value="190.0">
                                    <Setter Property="Background" Value="#e1f86e"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FiftyPercent}" Value="205.0">
                                    <Setter Property="Background" Value="#e1f86e"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FiftyPercent}" Value="215.0">
                                    <Setter Property="Background" Value="#f8d492"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FiftyPercent}" Value="230.0">
                                    <Setter Property="Background" Value="#f8d492"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FiftyPercent}" Value="245.0">
                                    <Setter Property="Background" Value="#ffa953"/>
