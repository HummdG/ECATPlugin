                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="75%" Binding="{Binding SeventyFivePercent}" Width="*" CanUserSort="False">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="115.0">
                                    <Setter Property="Background" Value="#009e00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="120.0">
                                    <Setter Property="Background" Value="#009e00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="125.0">
                                    <Setter Property="Background" Value="#00cc00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="130.0">
                                    <Setter Property="Background" Value="#00cc00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="135.0">
                                    <Setter Property="Background" Value="#00cc00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="140.0">
                                    <Setter Property="Background" Value="#00cc00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="150.0">
                                    <Setter Property="Background" Value="#00cc00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="155.0">
                                    <Setter Property="Background" Value="#00cc00"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="175.0">
                                    <Setter Property="Background" Value="#e1f86e"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SeventyFivePercent}" Value="195.0">
                                    <Setter Property="Background" Value="#e1f86e"/>
                                </DataTrigger>

                                <!-- Add more DataTriggers as needed for different values -->
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>